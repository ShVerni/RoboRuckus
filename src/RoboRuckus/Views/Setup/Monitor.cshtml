@{
    ViewBag.Title = "Monitor";
}

@section scripts
    {
    <script type="text/javascript" src=@Url.Content("~/lib/signalr/signalr.min.js")></script>
    <script type="text/javascript" src=@Url.Content("~/Scripts/monitor.js")></script>
}
<h2>Number of players: @ViewBag.players</h2>
<div id="board" class="left" data-board="@ViewBag.board" data-flag='@ViewBag.flags'>
    @for (int i = ViewBag.board_y; i >= 0; i--)
    {
        <div class="boardRow" id="y_@i">
            @for (int j = 0; j <= ViewBag.board_x; j++)
            {
                <div class="boardSquare" id="@(j)_@i"></div>
            }
            <div class="clear"></div>
        </div>
    }
</div>
<div class="left">
    <h2>Player Status</h2>
    <div id="botStatus"></div>
</div>
<div class="left">
    <h2>Player Moves</h2>
    <div class="ui-widget ui-helper-clearfix">
        <ul id="cardsContainer" class="cards ui-helper-reset ui-helper-clearfix"></ul>
    </div>
</div>
<div class="clear"></div>
<br />
<div id="startButton" data-started="@ViewBag.started">
    <a id="startGame" href="#">Start Game</a>
</div>
<div id="controlButtons">
    <a id="reset" href="#">Restart Game</a>
    <a id="resetAll" href="#">Reset Program</a>
    <div class="inline" id="timerContainer">
        <input type="checkbox" name="timer" id="timer" checked="@ViewBag.timer" />
        <label id="timerLabel" for="timer"><span id="timerText">Timer Disabled</span></label>
    </div>
</div>